issn = {01497634},
journal = {Neuroscience {\&} Biobehavioral Reviews},
keywords = {Sound-Induced Flash Illusion,Multisensory,Auditory,sound-induced flash illusion},
pages = {759--774},
publisher = {Elsevier Ltd},
title = {{What you see is what you hear: Twenty years of research using the Sound-Induced Flash Illusion}},
