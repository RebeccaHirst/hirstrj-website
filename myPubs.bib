issn = {18789307},
journal = {Developmental Cognitive Neuroscience},
keywords = {Development,Lateralization,Motor control,Speech production,Transcranial Doppler},
number = {December},
pages = {9--17},
pmid = {27744099},
publisher = {Elsevier Ltd},
title = {{Hemispheric speech lateralisation in the developing brain is related to motor praxis ability}},
url = {http://dx.doi.org/10.1016/j.dcn.2016.09.005},
volume = {22},
year = {2016}
